<div class="container-sm">
  <div class="card-group">
    <% @profiles.each do |p| %>
      <div class="card" style="max-width: 18rem; min-width: 14rem;">
        <div class="card-body width">
          <%= link_to "#{p.first_name} #{p.last_name}", show_profile_path(p.id) %>
        </div>
      </div>
    <% end %>
  </div>
</div>